<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/rel_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/box_complete" >

        <TextView
            android:id="@+id/tv_thankyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Thank You."
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_thankyou"
            android:layout_centerHorizontal="true"
            android:text="Your M! Insurance membership is now active."
            android:textColor="#000000"
            android:textSize="12sp" />

       

            <TextView
                android:id="@+id/tv_validupto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:layout_centerVertical="true"
                android:layout_below="@id/tv_active"
                android:layout_alignRight="@id/tv_active"
                android:text="Valid upto:"
                android:textColor="#bf272f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_custid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_active"
                android:layout_alignBaseline="@+id/tv_validupto"
                android:layout_alignBottom="@+id/tv_validupto"
                android:layout_alignLeft="@id/tv_active"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:text="Your Customer ID:"
                android:textColor="#bf272f"
                android:textSize="12sp" />
        
        <TextView
            android:id="@+id/tv_validuptodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_active"
            android:layout_below="@+id/tv_custid"
            android:text="Your Customer ID"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_custidnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_active"
            android:layout_below="@+id/tv_custid"
            android:text="Your Customer ID"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_CallUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_validuptodate"
            android:layout_centerHorizontal="true"
            android:paddingTop="25dp"
            android:text="For any assistance Call us on Toll Free number:"
            android:textColor="#20538e"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_CallUs"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"	
                android:background="@drawable/icon_call" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1800 407 333 333"
                android:textColor="#bf272f"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>