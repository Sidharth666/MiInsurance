<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/rel_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/box_complete" >

        <!-- <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/info_icon"
            android:padding="5dp" /> -->

        <TextView
            android:id="@+id/tv_activeMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Your membership is already active."
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_validupto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_activeMsg"
            android:layout_below="@id/tv_activeMsg"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:text="Valid upto:"
            android:textColor="#bf272f"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_custid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_validupto"
            android:layout_alignBottom="@+id/tv_validupto"
            android:layout_alignLeft="@id/tv_activeMsg"
            android:layout_below="@id/tv_activeMsg"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:text="Your Customer ID:"
            android:textColor="#bf272f"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_validuptodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_activeMsg"
            android:layout_below="@+id/tv_custid"
            android:text="Your Customer ID"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_custidnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_activeMsg"
            android:layout_below="@+id/tv_custid"
            android:text="Your Customer ID"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_CallUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_validuptodate"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingTop="25dp"
            android:text="In case of any assistance required please call us on Toll Free number:"
            android:textColor="#20538e"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_helpline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_CallUs"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_call" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1800 407 333 333"
                android:textColor="#bf272f"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_helpline"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ok_btn_selector"
            android:padding="10dp" />
    </RelativeLayout>

</RelativeLayout>